<%= form_for @school do |f| %>
<div>
<div class="form_label"><%= f.label :name %></div>
<%= f.text_field :name %>
</div>
<div>
<div class="form_label"><%= f.label :city %></div>
<%= f.text_field :city %>
</div>
<div>
<div class="form_label"><%= f.label :state %></div>
<%= f.text_field :state %>
</div>
<div>
<div class="form_label"><%= f.label :country %></div>
<%= f.text_field :country %>
</div>
<%= f.submit :class => "submit_button", :value => "Add School" %>
<% end %>
